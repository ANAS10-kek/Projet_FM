@model Projet_FM.Models.MailViewModel

@using (Html.BeginForm("_OngletContact", "Shared", FormMethod.Post, htmlAttributes: new { @id = "ContactUsForm" }))
{
    @Html.AntiForgeryToken()
    <div class="sec_onglet_contact container-fluid m-0 p-0 d-flex">
        <div style="background-color: black;"
             class="container m-0 px-0 py-0 col-md-3 fixed-bottom text-light d-flex justify-content-center flex-column onglet_contact">
            <div class="col-md-12 text-center  d-flex justify-content-around align-items-center  btn_display ">
                <h3 class="col-md-10">Contact us</h3>
                <div class="col-md-2" id="btn_close_open">
                    <span id="fleche"><i class="fa fa-arrow-up  text-primary" aria-hidden="true"></i></span>
                </div>
            </div>
            <div class="div_cacher" id="div_cacher">
                <div class="from col-md-12 d-flex justify-content-center flex-column ">
                    <div class="container form-group col-md-12 px-0 py-3 m-0">
                        <div class="col-md-12">
                            @Html.TextBoxFor(m => m.Name_M, new { @class = "d-inline form-control  col-md-12", @placeholder = "Enter your name" })
                            @Html.ValidationMessageFor(m => m.Name_M, "", new { @class = "text-danger" })
                        </div>

                    </div>
                    <div class="container form-group col-md-12 px-0 py-3 m-0">
                        <div class="col-md-12">
                            @Html.TextBoxFor(m => m.Email_M, new { @class = "d-inline form-control  col-md-12", @placeholder = "Enter your Email" })
                            @Html.ValidationMessageFor(m => m.Email_M, "", new { @class = "d-inline text-danger" })
                        </div>
                    </div>
                    <div class="container form-group col-md-12 px-0 py-3  m-0">
                        <div class="col-md-12">
                            @Html.TextBoxFor(m => m.Subject_M, new { @class = "d-inline form-control  col-md-12", @placeholder = "Enter your Subject" })
                            @Html.ValidationMessageFor(m => m.Subject_M, "", new { @class = "d-inline text-danger" })
                        </div>
                    </div>
                    <div class="container form-group col-md-12 px-0 py-3  m-0">
                        <div class="col-md-12">
                            @Html.TextAreaFor(m => m.Message_M, new { @class = "d-inline form-control  col-md-12", @placeholder = "Enter your Subject", @cols = "30", @rows = "5" })
                            @Html.ValidationMessageFor(m => m.Message_M, "", new { @class = "d-inline text-danger" })
                        </div>
                    </div>
                </div>
                <div class="col-md-12 my-1 d-flex justify-content-center flex-column">
                    <button id="send_email" type="submit" class="btn btn-info col-md-12">
                        <span>Send email</span>
                        <i class="fa fa-arrow-right" aria-hidden="true"></i>
                    </button>
                </div>
            </div>
        </div>
    </div>
}
<div class="box-footer-1 m-0 p-0">
    <a id="button"></a>
</div>